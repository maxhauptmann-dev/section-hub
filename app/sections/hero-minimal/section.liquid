{% comment %}
  Section Hub - Hero Minimal
  Ein cleaner, minimalistischer Hero-Bereich mit Überschrift, Text und CTA-Button.
{% endcomment %}

{{ 'section-hero-minimal.css' | asset_url | stylesheet_tag }}

<section class="hero-minimal" style="
  --hero-bg: {{ section.settings.background_color }};
  --hero-text: {{ section.settings.text_color }};
  --hero-accent: {{ section.settings.accent_color }};
  --hero-height: {{ section.settings.section_height }}vh;
">
  <div class="hero-minimal__container">
    {% if section.settings.eyebrow != blank %}
      <span class="hero-minimal__eyebrow">{{ section.settings.eyebrow }}</span>
    {% endif %}
    
    <h1 class="hero-minimal__heading">{{ section.settings.heading }}</h1>
    
    {% if section.settings.subheading != blank %}
      <p class="hero-minimal__subheading">{{ section.settings.subheading }}</p>
    {% endif %}
    
    {% if section.settings.button_text != blank %}
      <a href="{{ section.settings.button_link }}" class="hero-minimal__button">
        {{ section.settings.button_text }}
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M4 10H16M16 10L11 5M16 10L11 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Hero Minimal",
  "tag": "section",
  "class": "section-hero-minimal",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow Text",
      "default": "Neu eingetroffen"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Überschrift",
      "default": "Entdecke unsere neue Kollektion"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Unterüberschrift",
      "default": "Hochwertige Produkte, die dein Leben bereichern."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Jetzt entdecken"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "header",
      "content": "Farben"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Hintergrundfarbe",
      "default": "#1a1a2e"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Textfarbe",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Akzentfarbe",
      "default": "#6366f1"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "section_height",
      "min": 40,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Section Höhe",
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "Hero Minimal"
    }
  ]
}
{% endschema %}
